  "scripts": {
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:behavior": "cross-env NODE_ENV=test npx cucumber-js --publish-quiet --config cucumber.config.json"
  },
  "dependencies": {},
  "devDependencies": {
    "@cucumber/cucumber": "^8.5.2",
    "@types/jest": "^28.0.0",
    "@types/node": "^18.7.0",
    "cross-env": "^7.0.0",
    "jest": "^28.0.0",
    "ts-jest": "^28.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test)\\.(ts|js|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
